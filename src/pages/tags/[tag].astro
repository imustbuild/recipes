---
import Layout from '@layouts/Layout.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import RecipeCard from '@components/RecipeCard.astro';
import Tag from '@components/Tag.astro';
import { loadAllRecipes, filterByTag, getTagsIndex } from '@lib/recipes';

export async function getStaticPaths() {
  const recipes = loadAllRecipes();
  const tagsIndex = getTagsIndex(recipes);
  
  return tagsIndex.tags.map(({ tag }) => ({
    params: { tag },
  }));
}

const { tag } = Astro.params;
const allRecipes = loadAllRecipes();
const recipes = filterByTag(allRecipes, tag as string);
const tagsIndex = getTagsIndex(allRecipes);
const relatedTags = tagsIndex.tags
  .filter(t => t.tag !== tag)
  .slice(0, 6);
---

<Layout title={`${tag} recipes Â· Recipes`}>
  <div class="min-h-screen flex flex-col">
    <Header currentPath="/tags" />
    
    <main class="flex-1 max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-12 w-full">
      <div class="mb-8">
        <a href="/tags" class="inline-flex items-center gap-1 text-sm text-stone-500 hover:text-terracotta-600 mb-4 transition-colors">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          All tags
        </a>
        
        <h1 class="font-display text-3xl sm:text-4xl font-semibold text-stone-900 mb-2">
          <Tag tag={tag as string} linked={false} size="lg" />
        </h1>
        <p class="text-stone-600">
          {recipes.length} {recipes.length === 1 ? 'recipe' : 'recipes'} tagged with "{tag}"
        </p>
      </div>
      
      <!-- Recipe Grid -->
      {recipes.length > 0 ? (
        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
          {recipes.map(recipe => (
            <RecipeCard recipe={recipe} />
          ))}
        </div>
      ) : (
        <div class="text-center py-16">
          <div class="text-5xl mb-4">ğŸ·ï¸</div>
          <h2 class="font-display text-xl font-semibold text-stone-900 mb-2">No recipes found</h2>
          <p class="text-stone-600">No recipes are tagged with "{tag}".</p>
        </div>
      )}
      
      <!-- Related tags -->
      {relatedTags.length > 0 && (
        <section class="border-t border-stone-200 pt-8">
          <h2 class="text-sm font-medium text-stone-700 mb-3">Explore other tags</h2>
          <div class="flex flex-wrap gap-2">
            {relatedTags.map(({ tag, count }) => (
              <Tag tag={tag} count={count} />
            ))}
          </div>
        </section>
      )}
    </main>
    
    <Footer />
  </div>
</Layout>

